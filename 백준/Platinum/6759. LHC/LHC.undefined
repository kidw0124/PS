    cin>>n;
    vector<vector<ll>>grp(n+1);
    for(i=1;i<=n-1;i++){
        ll a,b;
        cin>>a>>b;
        grp[a].push_back(b);
        grp[b].push_back(a);
    }
    auto [diameter,cnt]=check_cnt(grp);
    cout<<diameter+1<<" "<<cnt<<"\n";
}

