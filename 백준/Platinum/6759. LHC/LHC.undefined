pll check_cnt(vector<vector<ll>>grp) {
    ll i,j;
    ll n;
    n=grp.size()-1;
    vector<ll>par(n+1),dep(n+1);
    function<void(ll,ll)>dfs=[&](ll u,ll p){
        par[u]=p;
        for(auto &w:grp[u]){
            if(w!=p){
                dep[w]=dep[u]+1;
                dfs(w,u);
            }
        }
    };
    dep[1]=0;
    dfs(1,-1);
    ll farthest=max_element(dep.begin(),dep.end())-dep.begin();
    dep[farthest]=0;
    dfs(farthest,-1);
    ll farthest2=max_element(dep.begin(),dep.end())-dep.begin();
    ll d=dep[farthest2];
    function<ll(ll,ll)>dfs_cnt=[&](ll u,ll p){
        ll ret=dep[u]==d/2;
        vector<ll>childs;
        for(auto &w:grp[u]){
            if(w!=p){
                dep[w]=dep[u]+1;
                if(p==-1){
                    childs.push_back(dfs_cnt(w,u));
                }
                else{
                    ret+=dfs_cnt(w,u);
                }
            }
        }
        ll sum=accumulate(childs.begin(),childs.end(),0ll);
        ll sqsum=accumulate(childs.begin(),childs.end(),0ll,[&](ll a,ll b){
            return a+b*b;
        });
        return ret+(sum*sum-sqsum)/2;
    };
    if(d&1){
        ll mid1=farthest2,mid2=farthest2;
        for(i=0;i<d/2;i++){
            mid1=par[mid1];
            mid2=par[mid2];
        }
        mid2=par[mid2];
        dep[mid1]=0;
        dep[mid2]=0;
        return {d,dfs_cnt(mid1,mid2)*dfs_cnt(mid2,mid1)};
    }
    else{
        ll mid=farthest2;
        for(i=0;i<d/2;i++){
            mid=par[mid];
        }
        dep[mid]=0;
        return {d,dfs_cnt(mid,-1)};
    }
}

void solve(ll testcase) {
    ll i,j;
